    "version": "0.2.0",
    "configurations": [
        {
            // to run scripts from scripts/ directory. 
            // Open the desired script in editor first then run
            "name": "Runscript",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/api/manage.py",
            "args": [
                "runscript",  "${fileBasenameNoExtension}"
            ],
            "django": true
        },
        {
            "name": "Runserver",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/api/manage.py",
            "args": [
                "runserver"
            ],
            "django": true
        }
    ]
}
